Config {
  font = "xft:TakaoPGothic:size=16:regular:antialias=true",
  , commands =
    [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
    , Run Memory ["-t","Mem: %"] 10
    , Run BatteryP ["BAT0"]
      [ "-t", "<acstatus><watts> (<left>%)",
        "-L", "10", "-H", "80", "-p", "3",
        "--", "-O", "<fc=green>On</fc> - ", "-i", "",
        "-L", "-15", "-H", "-5",
        "-l", "red", "-m", "blue", "-h", "green"]
      600
    , Run StdinReader
    , Run CpuFreq ["-t", "Freq:<cpu0>|<cpu1>GHz", "-L", "0", "-H", "2",
                  "-l", "lightblue", "-n","white", "-h", "red"] 50
    , Run Com "ibus" ["engine"] "" 1
    ]
    , template = "%ibus% %StdinReader% }{ %cpufreq% %cpu% %battery% | %date%"
}
