Config {
  font = "xft:TakaoPGothic:size=14:regular:antialias=true",
  , commands =
    [ Run MultiCpu ["-t", "<autototal>%", "-L","3","-H","50","--normal","green","--high","red"] 10
    , Run DiskIO [("/", "<read> <write>"), ("sda1", "<total>")] [] 10
    , Run Weather "RJTT" ["-t", "<skyCondition> <tempC>C <rh>%"] 36000
    , Run Memory ["-t","Mem: <usedratio>%"] 10, Run Swap [] 10
    , Run BatteryP ["BAT0"]
      [ "-t", "<acstatus><watts> (<left>%)",
        "-L", "10", "-H", "80", "-p", "3",
        "--", "-O", "<fc=green>On</fc> - ", "-i", "",
        "-L", "-15", "-H", "-5",
        "-l", "red", "-m", "blue", "-h", "green"]
      600
    , Run StdinReader
    ]
    , template = "%StdinReader% }{ %multicpu% || %memory% || %diskio% || %battery% || %date% || %RJTT%"
}
